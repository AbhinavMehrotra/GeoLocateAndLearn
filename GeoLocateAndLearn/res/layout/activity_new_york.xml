<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewLondonMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/textViewNearBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby"
        android:textColor="@color/Red"
        android:textSize="30dp" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75" >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/castle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewCastle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Castle Clinton National Monument"
                    android:textColor="@color/Black"
                    android:textSize="17dp"
                    android:onClick="castleBtn" />

                <ImageView
                    android:id="@+id/imageViewCastle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android"
                    android:onClick="castleCompassBtn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skyscraper"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/textViewSkyscraper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skyscraper Museum"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/imageViewSkyscraper"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/worldtrade"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/textViewWorldTrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="World Trade Centre"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/imageViewWorldTrade"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/footer_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/Black"
            android:onClick="footer_homeBtn"
            android:src="@drawable/footer_home" />

        <ImageView
            android:id="@+id/footer_compass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.00"
            android:background="@color/Black"
            android:cropToPadding="false"
            android:onClick="footer_compassBtn"
            android:src="@drawable/footer_compass" />
    </LinearLayout>

</LinearLayout>